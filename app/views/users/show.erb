<br><br>
<div class="container">
<div class="blog-header">
      <img class="img-circle" src=<%="#{@user.img_url}"%> width="90" height="90">
    <span class="blog-title"><%= "#{@user.first_name}'s Blog"%></span><br>
</div>
<div>
<br>
          <% if @user.blogs == [] %>
            <h4><%= "#{@user.first_name} has no posts." %></h4><br><br><br><br><br><br><br><br>
          <% else %>
          <% @user.blogs.each do |blog| %>
            <h2><%= link_to blog.title, blog_path(blog)%></h2>
            <h5><%= blog.created_at.strftime("%A,  %B %d, %Y") %></h5>
            <br>
            <%= simple_format(blog.content) %><br>
            <%= blog.likes.count %><%= (blog.likes.count) == 1 ? ' Like' : ' Likes'%> : <%= blog.comments.count %><%= (blog.comments.count) == 1 ? ' Comment' : ' Comments'%><br><br>
            ----------------------------------------------------<br><br>
          <% end %>
          <% end %>
<br><br><br>
</div>
</div>

<% if @user.music_url %>
<iframe width='0' height='0' src='https://www.youtube.com/embed/<%=@user.music_url.reverse[0..10].reverse%>?autoplay=1' frameborder='0' allow='accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture' allowfullscreen></iframe>
<% end %>

<%= render 'search' %>
