<%= render 'header' %>

<div id="form">

<bold><h1>Log In</h1></bold>
<br>
<%= form_for @user, url: login_path, method: :post do |f| %>
  <%= f.label :user_name %><br>
  <%= f.text_field :user_name, :size => 40  %><br><br>

  <%= f.label :password %><br>
  <%= f.password_field :password, :size => 40 %><br><br><br>

  <%= f.submit "Log In", class: "btn btn-primary btn-lg" %><br>
  Or <%= link_to(controller: 'users', action: 'new') { 'sign up' } %>
<% end %>
</div>
