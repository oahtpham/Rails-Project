<%= form_for @blog do |f| %>
  <%= f.label :user %><br>
  <%= f.collection_select :user_id, @users, :id, :user_name %><br><br>

  <%= f.label :title %><br>
  <%= f.text_field :title, size: 60 %><br><br>

  <%= f.label :content %><br>
  <%= f.text_area :content, :cols => 150, :rows => 15 %><br><br>

  <%= f.submit "Submit", class: "btn btn-primary btn-lg"%>
<% end %>
